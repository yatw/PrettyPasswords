<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.activities.BrowserActivity"
    android:paddingBottom="200dp">


    <LinearLayout
        android:id="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"
            android:tint="@color/colorWhite"
            android:padding="15dp"
            android:background="?android:selectableItemBackground"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="Manage Profile"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"/>


    </LinearLayout>


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="5dp"
        app:civ_shadow="false"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:id="@+id/body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">


        <CheckBox
            android:id="@+id/check_update_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Change User Name" />

        <LinearLayout
            android:id="@+id/username_group"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change UserName"
                android:textColor="@color/colorGray"/>

            <EditText
                android:id="@+id/new_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>

        </LinearLayout>



        <CheckBox
            android:id="@+id/check_update_master_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Change Master Password" />

        <LinearLayout
            android:id="@+id/master_pw_group"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Current Password"
                android:textColor="@color/colorGray"/>

            <EditText
                android:id="@+id/input_current_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a new Password"
                android:textColor="@color/colorGray"/>

            <EditText
                android:id="@+id/input_new_pw1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm new Password"
                android:textColor="@color/colorGray"/>

            <EditText
                android:id="@+id/input_new_pw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        app:layout_constraintTop_toBottomOf="@+id/body"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_save"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Save"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorPrimaryDark"
        app:iconTint="@null"
        app:icon="@drawable/icon_save"
        android:visibility="gone"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
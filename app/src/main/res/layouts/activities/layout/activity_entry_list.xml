<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5EDE3 "
        android:padding="15dp">

        <TextView
            android:id="@+id/TagNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7da2ab"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/EntryCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90 entries"
            android:textColor="@color/colorDoderBlue"
            android:textSize="18sp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/TagNameLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/AddEntryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:backgroundTint="#39A6C1"
            android:text="Add"
            android:drawableRight="@drawable/icon_add"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/TagNameLabel"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/no_entries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="You don't have any Entry yet"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@color/colorLightGrey">
            </TextView>
            <TextView
                android:id="@+id/new_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Create Entry"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/colorDoderBlue">
            </TextView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/EntriesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>


    </RelativeLayout>

</LinearLayout>